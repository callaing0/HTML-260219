    <script>
        
        const cartURL = "장바구니 주소";
        //장바구니 버튼 클릭 시, 장바구니에 저장(선택한 값을 서버에 전달)
        document.querySelector("#cart").addEventListener("click", cartSave);
    
        async function cartSave(){
            let price = document.getElementById("price").value;
            let amount = document.getElementById("amount").value;
            let size = document.getElementById("size").value;

            //객체 생성 및 json 변환
            let data = {
                itemPrice : price,
                itemAmount : amount,
                itemSize : size
            };

            let jsonData = JSON.stringify(data);

            try {
                const response = await fetch("http://dwstd.ipdisk.co.kr/dataview/test.php", {
                    method: "POST", 
                    headers: { "Content-Type": "application/json" }, 
                    body: jsonData
                });
                
                if(response.ok) {
                    let isMove = alert("장바구니에 담겼습니다!");
                    if (isMove) location.href = "cartURL";
                }
            } catch (error) {
                console.error("장바구니에 담기 실패", error);
            }
        }

        // 1. 이미지 리스트 및 초기화
        const imgList = ["1.jpg", "2.jpg", "3.jpg"];
        const items = document.querySelectorAll(".img-item");

        items.forEach((item, index) => {
            if (imgList[index]) {
                item.src = "./" + imgList[index];
            }
        });

        // 2. 슬라이드 로직
        const slide = document.querySelector(".slide");
        let currentIndex = 0; 
        const slideWidth = 400; 
        
        setInterval(function() {
            currentIndex++; 
            if (currentIndex >= imgList.length) {
                currentIndex = 0;
            }
            slide.style.left = -(currentIndex * slideWidth) + "px";
        }, 3000); 
    </script>
